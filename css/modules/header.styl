@import 'variables'
header 
	font-family primaryFont
	
.header-top
	background-color #007bbd
	li
		padding 15px 10px
		font-size 14px
		a
			color lightColor
			transition opacity .3s ease
			.fa
				margin-right 7px
	nav
		li
			padding 15px 0
			font-size 13px
			font-weight 700
			text-transform uppercase
			&:after
				content: '|'
				padding 0 25px
				color #3c98cf
			&:last-child
				&:after
					content initial
.mobile-menu
	display none
	~ .navbar-toggle
		position: absolute;
		top: 55px;
		right: 10px;
		z-index: 4;
		margin: 0;
		cursor: pointer;
		span
			position relative
			background-color lightColor
			&:nth-child(1)
				top 0
				transform rotate(0deg)
				transition all 0.3s ease
			&:nth-child(2)
				opacity 1
				transition all 0.3s ease
			&:nth-child(3)
				bottom 0
				transform rotate(0deg)
				transition all 0.3s ease
	&:checked
		~ nav
			padding 150px 100px
			opacity 1
			visibility visible
			li 
				padding 20px 0
				transform translateY(0)
				a
					font-size 20px
		~ .navbar-toggle
			span
				&:nth-child(1)
					top 6px
					transform rotate(45deg)
					transition all 0.3s ease
				&:nth-child(2)
					opacity 0
					transition all 0.1s ease
				&:nth-child(3)
					bottom 6px
					transform rotate(-45deg)
					transition all 0.3s ease	
.header-main
	padding 35px 0
	background-color #0087cb
.search-wrap
	padding 0 90px
	@media all and (max-width: 1200px)
		padding 0 40px
	.search-form
		display flex
		.search-item
			position relative
			border none
			font-family primaryFont
			line-height 20px
		input
			width 58%
			padding 15px 20px
			color #989898
			font-size 13px
			font-weight 500
			border-top-left-radius 4px
			border-bottom-left-radius 4px
		button
			padding 10px 20px
			background-color #006fa7
			border-top-right-radius 4px
			border-bottom-right-radius 4px
			.fa
				color lightColor
				font-size 20px
		.search-item--arrow
			position relative
			width 30%
			color #989898
			select
				width 100%
				height 100%
				padding 15px 10px
				color inherit
				font-size 15px
				font-weight 500
				background-color lightColor
			.fa
				position absolute
				top 50%
				right 10px
				z-index 1
				transform translateY(-50%)
				color inherit
				font-size 20px
.cart-wrap
	color lightColor
	.fa
		position relative
		font-size 18px
	.cart-counter
		position absolute
		top -8px
		right -14px
		display inline-block
		width 20px
		height 20px
		border-radius 50%
		background-color #fab314
		font-size 14px
		font-family primaryFont
		line-height 20px
		text-align center
	.cart-price
		padding-left 15px
		font-size 16px
		font-weight 700
		font-family secondaryFont
.header-button
	display none
.header-menu
	position relative
	background-color #efefef
	&:before
		content ''
		display block
		position absolute
		left 0
		right 0
		top 100%
		width 100%
		height 100%
		z-index -1
		background-image url('../img/footer-top-bg.jpg')
		background-repeat no-repeat
		-webkit-background-size cover
		-moz-background-size cover
		background-size cover
		transform: rotateX(180deg);
	.logo-wrap
		display none
	nav
		ul
			padding-left 5px
		li
			padding 20px 0
			font-weight 700
			&:after
				content: '|'
				padding 0 25px
				color #a8a8a8
			a
				color #0c0d0d
				transition opacity .3s ease
				&:hover 
					opacity .5
			&:last-child
				&:after
					content initial
			&.active
				a
					font-weight 400
	li
		padding 12px 0 12px 17px
		
@media all and (max-width: 992px)
	.header-top, .header-menu
		ul
			width 100%
			text-align center
		&:before
			content initial
	.logo-wrap
		width 100%
		margin-bottom 35px
		img
			margin 0 auto
	.search-wrap
		padding 0 40px 0 0

@media all and (max-width: 767px)
	.header-menu, .header-top
		nav
			li
				width 100%
				padding 15px 0
				&:after
					content initial
		li
			&:nth-child(1)
				img
					width 60px
			&:nth-child(2)
				img
					width 20px
			&:nth-child(3)
				img
					width 31px
			&:nth-child(4)
				img
					width 42px
	.logo-wrap
		position relative
		z-index 4
		padding 20px
		padding-right 70px
		padding-left 0
		margin 0
		img
			max-width 150px
			width 100%
			margin 0
	.cart-wrap
		width 100%
		order 2
		margin-bottom 15px
		text-align left
	.search-wrap
		width 100%
		order 3
		padding 0
		.search-form
			.search-item
				padding 10px !important
				font-size 13px !important
				line-height 15px
	.header-main
		padding 15px 0
	.header-top
		nav
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			z-index 2
			border 0
			box-shadow none
			transition all 0.5s ease
			opacity 0
			visibility hidden
			background-color #007bbd
			li
				transform translateY(20px)
				transition transform .3s ease

@media all and (max-width: 410px)
	.header-top
		li
			font-size 9px
	.mobile-menu
		~ .navbar-toggle
			top 45px
	.header-menu
		li
			padding-left 10px