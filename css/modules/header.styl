@import 'variables'
@import 'variables'
header
	padding 30px 70px 20px 40px
.logo-wrap
	img 
		max-width 290px
.header-button-menu
	// visibility hidden
	// opacity 0
	// top 42px
	// right 15px
	position relative
	height 18px
	width 28px
	transition .5s ease-in-out
	cursor pointer
	&:after 
		content ''
		position absolute
		top -14px
		left -12px
		width 50px
		height 50px
		font-size 20px	
		background-color #0c1f41
		transform rotate(-45deg)
		transition color .3s ease, background-color .3s ease
	&:hover
		&:after 
			background-color lightColor
		div 
			span 
				background-color #0c1f41
	div
		position relative
		z-index 1
		span
			display block
			width 100%
			height 3px
			position absolute
			left 0
			background lightColor
			border-radius 9px
			opacity 1
			transform rotate(0deg)
			transition .25s ease-in-out
			&:nth-child(1)
				top 0
				transform-origin left center
			&:nth-child(2)
				top 8px
				transform-origin left center
			&:nth-child(3)
				top 16px
				transform-origin left center
		&.open
			span
				&:nth-child(1)	
					transform rotate(45deg)
					top 1px
					left 4px
				&:nth-child(2)	
					width 0
					opacity 0
				&:nth-child(3)	
					transform rotate(-45deg)
					top 21px
					left 4px
