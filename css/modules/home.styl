@import 'variables'
.types-wrap 
	margin 30px 0
	ul 
		text-align right
		li 
			display inline-block
			padding 20px
			margin-left 5px
			margin-bottom 5px
			background-color #f6f6f7
			font-size 14px
			text-align center
			.fa 
				margin-right 5px 
				font-size 16px
				color #53af32
			
.promo-wrap
	position relative
	padding 30px
	margin 30px 0
	&:before 
		content ''
		display block
		position absolute 
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0,.25)
	h3
		color lightColor
		margin-bottom 15px
		font-size 30px
		font-family secondaryFont
		font-weight 700
	p
		color lightColor
		font-size 18px
		font-family secondaryFont
		font-weight 600
		line-height 1.3

.home-contact-wrap
	position relative 
	padding 0
	margin-bottom 30px
.home-contact--content
	padding 30px
	padding-bottom 86px
	background-image url('../img/hulp-bg.jpg')
	background-size cover 
	background-position center
	h2 
		margin-bottom 15px
		color #047cbe
		font-family secondaryFont
		font-weight 700
		font-size 36px
	h3 
		margin-bottom 15px
		font-size 22px
		font-weight 700
	p 
		font-size 16px
		line-height 1.2
		font-weight 300
.home-contact--footer 
	position absolute
	bottom 0 
	left 0 
	right 0
	padding 20px 40px
	background-color #007bbd
	ul 
		li 
			font-size 14px
			a 
				color lightColor
	.fa 
		margin-right 5px