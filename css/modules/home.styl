@import 'variables'
@font-face
	font-family 'angelina'
	src url('../css/fonts/angelina.ttf') format('truetype'),
		url('../css/fonts/angelina.woff2') format('woff2'),
		url('../css/fonts/angelina.woff') format('woff')
	font-weight normal
	font-style normal

.types-wrap 
	margin 30px 0
	ul 
		text-align right
		li 
			display inline-block
			padding 20px
			margin-left 5px
			margin-bottom 5px
			background-color #f6f6f7
			font-size 14px
			text-align center
			.fa 
				margin-right 5px 
				font-size 16px
				color #53af32

.sidebar-item
	h3
		padding 15px 20px
		border 1px solid #e0e0e0
		border-bottom-width 0px
		border-top-left-radius 4px
		border-top-right-radius 4px
		background-color #eeeeee
		color #121211
		font-size 18px
		font-weight 700
		font-family secondaryFont
	ul
		margin 15px 0
		list-style none
		li
			padding 15px 20px
			border-bottom 1px solid #e3e2e2
			color darkColor
			font-size 16px
			font-weight 400
			font-family primaryFont
			&:last-child
				border-bottom-width 0px
	.sidebar-sizes
		margin-top 10px
	.size-item
		display flex
		align-items flex-end
		flex-direction column
		flex-wrap wrap
		width calc(50% - 5px)
		height 140px
		float left
		padding 15px
		margin 5px
		background-color #efefef
		&:nth-child(2n+1)
			margin-left 0
		&:nth-child(2n)
			margin-right 0
		p, div
			width 100%
			margin-top auto
			color darkColor
			font-size 14px
			font-weight 400
			font-family primaryFont
			text-align center
			
.promo-wrap
	position relative
	padding 30px
	margin 30px 0
	&:before 
		content ''
		display block
		position absolute 
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0,.25)
	h3
		color lightColor
		margin-bottom 15px
		font-size 30px
		font-family secondaryFont
		font-weight 700
	p
		color lightColor
		font-size 18px
		font-family secondaryFont
		font-weight 600
		line-height 1.3

.home-contact-wrap
	position relative 
	margin-bottom 30px
.home-contact--content
	position relative
	padding 30px 15px
	padding-bottom 86px
	padding-bottom 55px
	background-image url('../img/hulp-bg.jpg')
	background-size cover 
	background-position center
	h2 
		margin-bottom 15px
		color #047cbe
		font-family secondaryFont
		font-weight 700
		font-size 36px
	h3 
		margin-bottom 15px
		font-size 22px
		font-weight 700
	p 
		font-size 16px
		line-height 1.2
		font-weight 300
		&:last-child
			float right
			// margin-right 30px
			// margin-top 30px
			padding 12px 30px 25px 0
			color darkColor
			font-size 30px
			font-weight 500
			font-family 'angelina'
			transform rotate(-7deg)
	.home-contact--image
		position absolute
		right -10px
		bottom 0
		img
			width 100%
.home-contact--footer 
	position absolute
	bottom 0 
	left 15px 
	right 15px
	padding 20px 30px
	background-color #007bbd
	ul 
		li 
			font-size 14px
			a 
				color lightColor
	.fa 
		margin-right 5px
.details-wrap
	margin-bottom 40px
.details-column
	h3
		margin-bottom 40px
		font-size 22px
		font-weight 500
		font-family secondaryFont
	p
		font-size 14px
		font-family primaryFont
		line-height 30px
.term-item
	position relative
	border 1px solid #f2f2f2
	margin-bottom 4px
	h4
		a
			position relative
			display block
			padding 25px
			color #121212
			font-size 16px
			font-weight 500
			font-family secondaryFont
			&[aria-expanded='true']
				.fa
					transform rotate(180deg)
		.fa
			position absolute
			right 25px
			color #adacac
			transition transform .2s ease
	.term-item--content
		padding 25px