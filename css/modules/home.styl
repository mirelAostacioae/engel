@import 'variables'
.products-wrap
	font-size 0
.product-item
	display inline-block
	float initial
.product-item--type
	color #989898
	font-size 14px
	font-family primaryFont
.product-item--name
	color #000
	font-size 16px
	font-family primaryFont
.product-item--category
	text-align right
.product-item--image
	background-size contain
	background-position center
	background-repeat no-repeat
	&:before
		padding-top 60%
.product-item--details
	padding 15px 0 25px
.product-item--price
	color #000
	font-size 16px
	font-family primaryFont
	font-weight 500
.product-item--capacity
	color #000
	font-size 14px
	font-family primaryFont
.product-item--timer
	color #fff
	background-color #149d54
	p
		padding 10px 0
		font-size 14px
		font-family primaryFont
		text-align center
		.fa
			margin-right 10px
.promo-wrap
	padding 30px
	margin 60px 0
	h3
		font-size 30px
		font-family secondaryFont
		font-weight 700
	p
		font-size 18px
		font-family secondaryFont
		font-weight 500