@import 'variables'
@font-face
	font-family 'angelina'
	src url('../css/fonts/angelina.ttf') format('truetype'),
		url('../css/fonts/angelina.woff2') format('woff2'),
		url('../css/fonts/angelina.woff') format('woff')
	font-weight normal
	font-style normal

.types-wrap 
	margin 30px 0
	ul 
		text-align right
		li 
			display inline-block
			padding 20px
			margin-left 5px
			margin-bottom 5px
			background-color #f6f6f7
			font-size 14px
			text-align center
			.fa 
				margin-right 5px 
				font-size 16px
				color #53af32

.sidebar-item
	h3
		padding 15px 20px
		border 1px solid #e0e0e0
		border-bottom-width 0px
		border-top-left-radius 4px
		border-top-right-radius 4px
		background-color #eeeeee
		color #121211
		font-size 18px
		font-weight 700
		font-family secondaryFont
	ul
		margin 15px 0
		list-style none
		li
			border-bottom 1px solid #e3e2e2
			color darkColor
			font-size 16px
			font-weight 400
			font-family primaryFont
			&:last-child
				border-bottom-width 0px
			a 
				display block
				padding 15px 20px
				transition background-color .3s ease
				&:hover 
					background-color rgba(0,0,0,.1)
	.sidebar-sizes
		margin-top 10px
	.size-item
		height 140px
		float left
		padding 0
		margin-bottom 10px
		&:nth-child(2n+1)
			padding-right 5px
		&:nth-child(2n)
			padding-left 5px
		> a
			display flex
			align-items flex-end
			flex-direction column
			flex-wrap wrap
			height 100%
			background-color #efefef
			padding 15px
			transition background-color .3s ease
			&:hover 
				background-color #cecdcd
		p, div
			width 100%
			margin-top auto
			color darkColor
			font-size 14px
			font-weight 400
			font-family primaryFont
			text-align center
		img
			max-width 100%
		@media all and (min-width: 768px) and (max-width: 992px)
			padding 0 !important
.promo-wrap
	position relative
	padding 30px
	margin 30px 0
	&:before 
		content ''
		display block
		position absolute 
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0,.25)
	h3
		color lightColor
		margin-bottom 15px
		font-size 30px
		font-family secondaryFont
		font-weight 700
	p
		color lightColor
		font-size 18px
		font-family secondaryFont
		font-weight 600
		line-height 1.3
	@media all and (max-width: 768px)
		h3 
			font-size 24px
		p 
			font-size 16px
.home-contact-wrap
	position relative 
	margin-bottom 30px
	&:after
		content ''
		position absolute
		top 0 
		right 15px 
		bottom 0
		left 15px
		background-image url('../img/hulp-bg.jpg')
		background-size cover 
		background-position center
		
.home-contact--content
	position relative
	padding 30px 15px
	padding-bottom 86px
	padding-bottom 55px
	z-index 1
	> div
		position relative
		z-index 1
	h2 
		margin-bottom 15px
		color #047cbe
		font-family secondaryFont
		font-weight 700
		font-size 36px
	h3 
		margin-bottom 15px
		font-size 22px
		font-weight 700
	p 
		font-size 16px
		line-height 1.2
		font-weight 300
		&:last-child
			float right
			// margin-right 30px
			// margin-top 30px
			padding 12px 30px 25px 0
			color darkColor
			font-size 30px
			font-weight 500
			font-family 'angelina'
			transform rotate(-7deg)
	.home-contact--image
		position absolute
		right 0
		bottom 0
		z-index 0
		img
			width 120%
			margin-left -20%
			@media all and (max-width: 992px)
				width 80%
				margin-left 0
			@media all and (max-width: 767px)
				display none
.home-contact--footer 
	position absolute
	bottom 0 
	left 15px 
	right 15px
	padding 20px 30px
	background-color #007bbd
	z-index 1
	ul 
		li 
			font-size 14px
			a 
				color lightColor
	.fa 
		margin-right 5px
.details-wrap
	margin-bottom 40px
.details-column
	h3
		margin-bottom 40px
		font-size 22px
		font-weight 500
		font-family secondaryFont
		@media all and (max-width: 992px)
			margin-bottom 20px
	p
		font-size 14px
		font-family primaryFont
		line-height 30px
	img
		@media all and (min-width: 993px)
			width 100%
	@media all and (max-width: 992px)
		margin-top 35px
.term-item
	position relative
	border 1px solid #f2f2f2
	margin-bottom 4px
	h4
		a
			position relative
			display block
			padding 25px
			color #121212
			font-size 16px
			font-weight 500
			font-family secondaryFont
			&[aria-expanded='true']
				.fa
					transform rotate(180deg)
		.fa
			position absolute
			right 25px
			color #adacac
			transition transform .2s ease
	.term-item--content
		padding 0 25px 10px
		font-size 15px
		line-height 1.2
		font-family primaryFont
@media all and (max-width: 992px)
	.types-wrap
		ul
			text-align center