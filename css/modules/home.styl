@import 'variables'
@font-face
	font-family 'angelina'
	src url('../css/fonts/angelina.ttf') format('truetype'),
		url('../css/fonts/angelina.woff2') format('woff2'),
		url('../css/fonts/angelina.woff') format('woff')
	font-weight normal
	font-style normal

.types-wrap 
	margin 30px 0
	ul 
		text-align right
		li 
			display inline-block
			padding 20px
			margin-left 5px
			margin-bottom 5px
			background-color #f6f6f7
			font-size 14px
			text-align center
			.fa 
				margin-right 5px 
				font-size 16px
				color #53af32
			
.promo-wrap
	position relative
	padding 30px
	margin 30px 0
	&:before 
		content ''
		display block
		position absolute 
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0,0,0,.25)
	h3
		color lightColor
		margin-bottom 15px
		font-size 30px
		font-family secondaryFont
		font-weight 700
	p
		color lightColor
		font-size 18px
		font-family secondaryFont
		font-weight 600
		line-height 1.3

.home-contact-wrap
	position relative 
	margin-bottom 30px
.home-contact--content
	position relative
	padding 30px 15px
	padding-bottom 86px
	padding-bottom 55px
	background-image url('../img/hulp-bg.jpg')
	background-size cover 
	background-position center
	h2 
		margin-bottom 15px
		color #047cbe
		font-family secondaryFont
		font-weight 700
		font-size 36px
	h3 
		margin-bottom 15px
		font-size 22px
		font-weight 700
	p 
		font-size 16px
		line-height 1.2
		font-weight 300
		&:last-child
			float right
			// margin-right 30px
			// margin-top 30px
			padding 12px 30px 25px 0
			color darkColor
			font-size 30px
			font-weight 500
			font-family 'angelina'
			transform rotate(-7deg)
	.home-contact--image
		position absolute
		right -10px
		bottom 0
		img
			width 100%
.home-contact--footer 
	position absolute
	bottom 0 
	left 15px 
	right 15px
	padding 20px 30px
	background-color #007bbd
	ul 
		li 
			font-size 14px
			a 
				color lightColor
	.fa 
		margin-right 5px
.details-wrap
	margin-bottom 40px
.details-column
	h3
		margin-bottom 40px
		font-size 22px
		font-weight 500
		font-family secondaryFont
	p
		font-size 14px
		font-family primaryFont
		line-height 30px
.term-item
	position relative
	padding 25px
	border 1px solid #f2f2f2
	margin-bottom 4px
	h4
		font-size 16px
		font-weight 500
		font-family secondaryFont
	.fa
		position: absolute;
		top: 50%;
		right: 25px;
		transform: translateY(-50%);
		color: #adacac;