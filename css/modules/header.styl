@import 'variables'
header 
	font-family primaryFont
	
.header-top
	background-color #007bbd
	li
		padding 15px 10px
		font-size 14px
		a
			color lightColor
			transition opacity .3s ease
			.fa
				margin-right 7px
	nav
		li
			padding 15px 0
			font-size 13px
			font-weight 700
			text-transform uppercase
			&:after
				content: '|'
				padding 0 25px
				color #3c98cf
			&:last-child
				&:after
					content initial
	
.header-main
	padding 35px 0
	background-color #0087cb
.search-wrap
	padding 0 90px
	@media all and (max-width: 1200px)
		padding 0 40px
	.search-form
		display flex
		max-width 767px
		.search-item
			position relative
			border none
			font-family primaryFont
			line-height 20px
		input
			width 58%
			padding 15px 20px
			color #989898
			font-size 13px
			font-weight 500
			border-top-left-radius 4px
			border-bottom-left-radius 4px
		button
			width 12%
			padding 10px 20px
			background-color #006fa7
			border-top-right-radius 4px
			border-bottom-right-radius 4px
			.fa
				color lightColor
				font-size 20px
		.search-item--arrow
			position relative
			width 30%
			color #989898
			select
				width 100%
				padding 15px 10px
				color inherit
				font-size 15px
				font-weight 500
			.fa
				position absolute
				top 50%
				right 10px
				z-index 1
				transform translateY(-50%)
				color inherit
				font-size 20px
.cart-wrap
	color lightColor
	.fa
		position relative
		font-size 18px
	.cart-counter
		position absolute
		top -8px
		right -14px
		display inline-block
		width 20px
		height 20px
		border-radius 50%
		background-color #fab314
		font-size 14px
		font-family primaryFont
		line-height 20px
		text-align center
	.cart-price
		padding-left 15px
		font-size 16px
		font-weight 700
		font-family secondaryFont
.header-button
	display none
.header-menu
	position relative
	background-color #efefef
	&:before
		content ''
		display block
		position absolute
		left 0
		right 0
		top 100%
		width 100%
		height 100%
		z-index -1
		background-image url('../img/footer-top-bg.jpg')
		background-repeat no-repeat
		-webkit-background-size cover
		-moz-background-size cover
		background-size cover
		transform: rotateX(180deg);
	nav
		ul
			padding-left 5px
		li
			padding 20px 0
			font-weight 700
			&:after
				content: '|'
				padding 0 25px
				color #a8a8a8
			a
				color #0c0d0d
				transition opacity .3s ease
				&:hover 
					opacity .5
			&:last-child
				&:after
					content initial
			&.active
				a
					font-weight 400
	li
		padding 12px 0 12px 17px
		
@media all and (max-width: 992px)
	.header-top, .header-menu
		ul
			width 100%
			text-align center
		&:before
			content initial
	.logo-wrap
		width 100%
		margin-bottom 35px
		img
			margin 0 auto
	.search-wrap
		padding 0 40px 0 0

@media all and (max-width: 767px)
	.cart-wrap
		width 100%
		order 2
		margin-bottom 35px
		text-align center
	.search-wrap
		width 100%
		order 3
		padding 0